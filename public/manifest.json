{
  "manifest_version": 3,
  "name": "Search Tabs Customizer - 検索結果タブカスタマイズ",
  "short_name": "Search Tabs Customizer",
  "version": "0.2.0",
  "description": "Google や Bing の検索結果ページ内のタブを編集・非表示・追加できます",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/*", "https://www.bing.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["https://www.google.com/*", "https://www.bing.com/*"]
    }
  ]
}
