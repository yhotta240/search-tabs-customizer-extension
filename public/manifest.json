{
  "manifest_version": 3,
  "name": "Search Tabs Customizer - 検索結果タブカスタマイズ",
  "short_name": "Search Tabs Customizer",
  "version": "1.0.0",
  "description": "Google や Bing の検索結果ページ内のタブを編集・非表示・追加できます",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/*", "https://www.bing.com/*", "https://search.yahoo.co.jp/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png", "modal.html", "*.css", "*.js", "*.woff2", "*.woff"],
      "matches": ["https://www.google.com/*", "https://www.bing.com/*", "https://search.yahoo.co.jp/*"]
    }
  ]
}
